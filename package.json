{
  "version": "1.0.0",
  "name": "react-event-modifiers",
  "description": "Enhances React elements with Svelte-inspired event modifiers like 'onClick-preventDefault' and 'onClick-stopPropagation'.",
  "author": "kangabru",
  "license": "MIT",
  "keywords": [
    "react",
    "svelte",
    "event modifiers",
    "stopPropagation",
    "preventDefault"
  ],
  "scripts": {
    "test": "jest",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "check": "npm run typecheck && npm run pretty:check && npm run test",
    "typecheck": "tsc --noEmit",
    "pretty:write": "npx prettier --write .",
    "pretty:check": "npx prettier --check ."
  },
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/react-dom": "18.2.4",
    "@types/react": "18.2.6",
    "jest": "^29.5.0",
    "prettier": "2.8.8",
    "react": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.9"
  }
}
